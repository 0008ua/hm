{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "google"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "linebreak-style": 0,
        "object-curly-spacing": 0,
        "require-jsdoc": 0,
        "camelcase": 0,
        "variable-name": {
            "options": [
                "ban-keywords",
                "check-format",
                "allow-leading-underscore",
                "allow-snake-case"
            ]
        },
        "max-len": [
            2,
            {
                "code": 120,
                "tabWidth": 2,
                "ignoreUrls": true
            }
        ]
    }
}